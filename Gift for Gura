#include <stdio.h>
int sm(int r,int h)
{
	int R,H;
	for(;h>0;h--)
	{
		for(H=h;H>0;H--)
			printf(" ");
		for(R=(r-4*h+1)/2;R>0;R--)
			printf("*");
		for(H=2*h-1;H>0;H--)
			printf(" ");
		for(R=(r-4*h+1)/2;R>0;R--)
			printf("*");
		printf("\n");
	}
	return 0;
}

int xm(int r)
{
	int R,h,H;
	for(h=0;r>0;r--)
	{
		for(H=h;H>0;H--)
			printf(" ");
		for(R=r;R>0;R--)
			printf("*");
		h++;
		r--;
		printf("\n");
	}
	return 0;
}

int main()
{
	int r,h;
	printf("输入爱心半径:");
	scanf("%d",&r);
	r=2*r-1;
	for(h=0;(r-4*h+1)/2!=3&&(r-4*h+1)/2!=2;)
		h++;
	sm(r,h);
	xm(r);
	return 0;
}

给顾部长的爱心(*/ω＼*)
